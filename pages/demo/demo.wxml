<view class="main">
  <view class='page_row' bindtap="suo">
    <view class="search">
      <view class="df search_arr">
        <icon class="searchcion" size='20' type='search'></icon>
        <view class="weui-icon-clear" style='margin-left:200rpx;' bindtap="clearInput">
        <icon wx:if="{{str.length > 0}}" type="clear" size="20"></icon>
        </view>
        <input type='text' confirm-type='send' class="" bindinput="showResult" bindblur="closeResult" placeholder="请输入关键字" value="{{str}}" />
      </view>
    </view>
    <view class='sousuo' bindtap='bindViewTap'>搜索</view>
  </view>
  <scroll-view class="searchResult" style='display:{{redisplay}}'>
    <block wx:for='{{resultText}}'>
      <view bindtap='completeInput' data-name="{{item}}">
        {{item}}
      </view>
    </block>
  </scroll-view>
  <view class='search_row'>
    <view class="{{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">课程</view>
    <view class="{{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">微视</view>
    <view class="{{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">问答</view>
    <view class="{{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">音频</view>
    <view style="color:#d0d0d0;margin-left:40rpx;margin-right:40rpx">|</view>
    <view bindtap="showView">筛选</view>
  </view>
  <view class="text_recommended">{{swiperText[currentTab]}}</view>
  <!--根据滑动页面的index修改标题-->
  <view class="divLine"></view>
  <swiper current="{{currentTab}}" bindchange="swiperTab">
    <swiper-item>
      <scroll-view scroll-x='false' scroll-y='true'>
        <!--视频页-->
        <view class="video_column">
        <block wx:for='{{courseResult}}'>
          <view wx:if="{{index<courseCount}}" class="video_row" data-id='{{item.cNo}}' bindtap='bindViewCourse'>
            <view class="video_img">
              <image src="../../image/{{item.imageUrl}}" mode='aspectFit'></image>
            </view>
            <view class="video_detail">
              <text decode='true' space='emsp'>{{item.cName}}\n{{item.tName}}\n</text>
              <view class="view_row">
                <image src="../../image/star.jpg"></image>
                <text decode='true' space='ensp'> {{item.pageview}}人观看</text>
              </view>
            </view>
            <view class="video_price">
              ￥{{item.price}}
            </view>
          </view>
          </block>
        </view>
        <view wx:if="{{courseCount<courseResult.length}}" class="video_nextpage" bindtap='changeCourseCount'>
          加载更多>
        </view>
        <view wx:else class="video_nextpage">
          已经没有更多啦
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-x='false' scroll-y='true'>
        <!--小视频页-->
        <view class="video_column">
          <block wx:for="{{videoResult}}">
          <view wx:if="{{index<videoCount}}" class="video_row">
            <view class="video_img">
              <image src="../../image/{{item.imageUrl}}" mode='aspectFit'></image>
            </view>
            <view class="video_detail">
              <text decode='true' space='emsp'>{{item.sdescribe}}\n{{item.uName}}\n</text>
              <view class="view_row">
                <image src="../../image/video.jpg"></image>
                <text decode='true' space='ensp'> {{item.pageview}}人观看</text>
              </view>
            </view>
            <view class="svideo_like">
              {{item.surname}}个赞
            </view>
          </view>
          </block>
        </view>
        <view wx:if="{{videoCount<videoResult.length}}" class="video_nextpage" bindtap='changeVideoCount'>
          加载更多>
        </view>
        <view wx:else class="video_nextpage">
          已经没有更多啦
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y='true'>
        <!--讨论页-->
        <view class="video_column">
        <block wx:for="{{topicResult}}">
          <view wx:if="{{index<topicCount}}" class="view_column view_bottomborder">
            <view class='topic_header'>{{item.title}}</view>
            <view class="text_36 topic_detail">
              {{item.topicDetail}}
            </view>
            <view class="view_top10">
              <block wx:if="{{item.imageUrl}}">
              <image style="height:20vh;width:100%;" src="../../image/{{item.imageUrl}}"></image>
              </block>
              <view class="padding10 text_30 text_gray">
                阅读数 {{item.pageview}} | 评论数 {{item.pv}}
              </view>
            </view>
          </view>
        </block>
        </view>
        <view wx:if="{{topicCount<topicResult.length}}" class="video_nextpage" bindtap='changeTopicCount'>
          加载更多>
        </view>
        <view wx:else class="video_nextpage">
          已经没有更多啦
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-x='false' scroll-y='true'>
        <!--音频页-->
        <view class="video_column">
        <block wx:for="{{listenResult}}">
          <view class="video_row">
            <view wx:if="{{item.imageUrl}}" class="video_img">
              <image src="../../image/{{item.imageUrl}}" mode='aspectFit'></image>
            </view>
            <view wx:else class="video_img"><!--如果没照片则显示默认照片-->
              <image src="../../image/top1.png" mode='aspectFit'></image>
            </view>
            <view class="video_detail">
              <text decode='true' space='emsp'>{{item.title}}\n{{item.uName}}\n</text>
              <view class="view_row">
                <image src="../../image/listen.jpg" style="margin:6rpx;width:30rpx;height:30rpx;"></image>
                <text space='ensp'> {{item.pageview}}人观看</text>
              </view>
            </view>
            <view class="svideo_like" bindtap='changeListenCount'>
              {{item.like}}个赞
            </view>
          </view>
        </block>
        </view>
        <view wx:if="{{listenCount<listenResult.length}}" class="video_nextpage" bindtap='changeListenCount'>
          加载更多>
        </view>
        <view wx:else class="video_nextpage">
          已经没有更多啦
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>
<!--遮挡，点击侧滑栏收回-->
<view class="bg" style='display:{{display}}' bindtap='showMain'></view>
<!--侧滑栏-->
<view class="page_tab" style='display:{{tabdisplay}}'>
  <view class="video_column" style="margin-top:20rpx">
    <text class="text_42" space='emsp'> 视频类型</text>
    <view class="video_row" style="margin-top:30rpx">
      <button class="oval_component">基础版</button>
      <button class="oval_component" style='margin-right:260rpx;'>进阶版</button>
    </view>
    <text class="text_42" space='emsp' style='margin-top:30rpx'> 价格区间</text>
    <view class="video_row" style="margin-top:30rpx;">
      <input class="oval_component" placeholder='最小值'></input>
      <view class='centerLine'></view>
      <input class="oval_component" placeholder='最大值'></input>
    </view>
    <view style="display:flex;margin-top:30rpx;">
      <button class="halfovalLeft">重置</button>
      <button class="halfovalRight">确定</button>
    </view>
  </view>
</view>